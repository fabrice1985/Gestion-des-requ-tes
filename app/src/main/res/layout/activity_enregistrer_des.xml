<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnregistrerDES">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entrez les paramètres d'inscription"
            android:textColor="#000000"
            android:textStyle="italic"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom de l'agent DES"
            android:textColor="#000000"
            android:textSize="15sp"
            />
        <EditText
            android:id ="@+id/nomdes"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:ems = "10"
            android:hint = ""
            android:inputType = "text"
            android:textColor="#000000"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prénom de l'agent de la DES"
            android:textColor="#000000"
            android:textSize="15sp"
            />
        <EditText
            android:id ="@+id/prenomdes"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:ems = "10"
            android:hint = ""
            android:inputType = "text"
            android:textColor="#000000"
            android:textSize="15sp"/>

        <Button
            android:id = "@+id/btnenrdes"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:text = "Envoyer"
            android:textSize="25dp"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

</ScrollView>