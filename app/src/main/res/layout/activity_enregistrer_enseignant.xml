<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnregistrerEnseignant">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entrez les paramètres d'inscription"
            android:textColor="#000000"
            android:textStyle="italic"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom Enseignant"
            android:textColor="#000000"
            android:textSize="15sp"
            />
        <EditText
            android:id ="@+id/nomenseignant"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:ems = "10"
            android:hint = ""
            android:inputType = "text"
            android:textColor="#000000"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prénom Enseignant"
            android:textColor="#000000"
            android:textSize="15sp"
            />
        <EditText
            android:id ="@+id/prenomenseignant"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:ems = "10"
            android:hint = ""
            android:inputType = "text"
            android:textColor="#000000"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Département"
            android:textColor="#000000"
            android:textSize="15sp"
            />
        <Spinner
            android:id="@+id/spinnerfiliere"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:entries="@array/listfiliere">
        </Spinner>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grade"
            android:textColor="#000000"
            android:textSize="15sp"
            />
        <Spinner
            android:id="@+id/spinnergrade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:entries="@array/listgrade">
        </Spinner>

        <Button
            android:id = "@+id/btnenrenseignant"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:text = "Envoyer"
            android:textSize="25dp"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

</ScrollView>